<% provide(:title, "Logowanie") %>
<h1>Zaloguj się jako lekarz</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>
      
      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password, "Hasło" %>
      <%= f.password_field :password %>

      </div>
</div>
<div class="center">
      <%= f.submit "Zaloguj", class: "btn btn-large btn-primary" %>
    <% end %>
</div>

<div class="row">
  <div class="span6 offset3">
    <p style= "margin-top: 30px"> Problem z logowaniem? <%= link_to "Skontaktuj się z administratorem" , help_path %> </p>
    </div>
</div>