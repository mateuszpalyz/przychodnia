<% show_name = @user.name + ' ' + @user.surname %>
<% provide(:title, show_name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <% if @user.admin %>
          <%= image_tag("admin.png", alt: "doctor", class: "avatar") %>
          <%= show_name %>
        <% else %>
          <%= image_tag("doctor.png", alt: "doctor", class: "avatar") %>
          dr <%= show_name %>
        <% end %>
      </h1>
    <section>
    <%= @user.specialty  %>
    </br>
    wiek: <%= @user.age  %>
  </aside>
</div>
